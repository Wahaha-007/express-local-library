<%- include('layout-top'); -%>
<h1>Genre : <%=genre.name%></h1>
<div style="margin-left:20px;margin-top:20px">
    <h4>Books</h4>
    <dl>
        <% if(genre_books.length> 0) { %>
        <%    genre_books.forEach(book=>{ %>

        <dt><a href="<%=book.url%>">
                <%=book.title%>
            </a>
        </dt>
        <dd>
            <%=book.summary%>
        </dd>
        <hr>

        <%} )%>

        <% } else {%>
        <p>-- No book to display --</p>
        <% }%>
    </dl>
</div>

<%- include('layout-end'); -%>