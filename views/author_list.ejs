<%- include('layout-top'); -%>
<h1><%=title%></h1>
<ul>

    <% if(author_list.length> 0) { %>
    <%    author_list.forEach(author=>{ %>

    <li><a href="<%=author.url%>">
            <%=author.name%>
        </a><span style="float:right">( <%=author.date_of_birth_f%> - <%=author.date_of_death_f%> )</span>
    </li>
    <%} )%>

    <% } else {%>
    <p>-- No author to display --</p>
    <% }%>

</ul>
<%- include('layout-end'); -%>