<%- include('layout-top'); -%>
<h1><%=title%></h1>
<ul>

    <% if(bookinstance_list.length> 0) { %>
    <%    bookinstance_list.forEach(val=>{ %>
    <li><a href="<%=val.url%>">
            <%=val.book.title%> : <%=val.imprint%> -
        </a>
        <%if(val.status==='Available') {%>
        <span class="text-success"><%=val.status%></span>
        <%} else if (val.status==='Maintenance') {%>
        <span class="text-danger"><%=val.status%></span>
        <%} else {%>
        <span class="text-warning"><%=val.status%></span>

        <%} if(val.status!=='Available')%>
        <span style="float:right">(Due:<%=val.due_back_formatted%>)</span>
    </li>
    <%} )%>
    <% } else {%>
    <p>-- No book to display --</p>
    <% }%>

</ul>
<%- include('layout-end'); -%>